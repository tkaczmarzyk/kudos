# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET		/bars						controllers.BarController.list
POST	/bars						controllers.BarController.newBar

GET		/kudos						controllers.KudosController.list
POST	/kudos						controllers.KudosController.submit
GET		/kudos/new					controllers.KudosController.showForm
GET		/kudos/:id					controllers.KudosController.findById(id: Int)


GET		/people						controllers.PeopleController.list

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
